<Window x:Class="PushTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PushTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="myGrid" Background="White">
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="ButtonRed" Height="50" Background="Red" Width="150">Red</Button>
            <Button x:Name="ButtonBlue" Height="50" Click="ButtonBlue_Click" Background="Aqua" Width="150">Blue</Button>
            <Button x:Name="ButtonGreen" Height="50" Background="LightGreen" Width="150">Green</Button>
        </StackPanel>
    </Grid>
</Window>
