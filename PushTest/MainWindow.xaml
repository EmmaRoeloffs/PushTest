<Window x:Class="PushTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PushTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="ButtonRed" Height="50" Background="Red" Width="150"></Button>
            <Button x:Name="ButtonBlue" Height="50" Background="Blue" Width="150"></Button>
            <Button x:Name="ButtonGreen" Height="50" Background="green" Width="150"></Button>
        </StackPanel>
    </Grid>
</Window>
